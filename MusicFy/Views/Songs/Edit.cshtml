@model MF.Data.Song.Song

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId">
                    <option value="">--Select Album--</option>
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" value="@Model.ImageFileName" class="form-control" id="fileInput" onchange="previewImage()" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="~/uploads/banners/@Model.ImageFileName" id="preview" class="img-thumbnail square-image" />
            </div>
            <div class="form-group">
                <label asp-for="MusicFile" class="control-label"></label>
                <input asp-for="MusicFile" type="file" value="@Model.MusicFileName" class="form-control" id="audio"/>
                <span asp-validation-for="MusicFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>

                <audio id="previewAudio" controls>
                    <source src="/uploads/songs/@Model.MusicFileName" type="audio/mp3" />
                    Your browser does not support the audio element.
                </audio>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
}
