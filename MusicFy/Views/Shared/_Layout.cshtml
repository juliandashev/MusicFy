<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicFy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicFy.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MusicFy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Songs" asp-action="Index">Songs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Albums" asp-action="Index">Albums</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="Playlists" asp-action="Index">Playlists</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted scaled-footer">
        <div class="container align-items-center text-center">
            <div class="row align-items-start">

                <div class="col-md-2" style="text-align: right">2:11</div> <!--Current time on the song-->

                <div class="col-md-6">
                    <input type="range" min="0" max="100" step="1" value="0" name="timestamp" id="slider_timestamp"/>
                </div>

                <div class="col-md-2" style="text-align: left"> 5:43</div> <!--Song duration-->
            </div>
        </div>
        <div class="container align-items-center text-center"><!--Song banner with title-->
            <div class="row align-items-center">
                <div class="col-md-2">
                    <div class="row">
                        <div class="col-sm-6">Banner</div>
                        <div class="col-sm-6">Song name
                                        <p>Song artist</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <button class="btn btn-close-white btn_controller_circle" type="submit" name="action" value="Replay">
                        <!--Replay song-->
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>

                    <button class="btn btn-close-white btn_controller_circle" type="submit" name="action" value="Replay">
                        <!--Skip to next song-->
                        <i class="bi bi-skip-backward-fill"></i>
                    </button>

                    <button class="btn btn-close-white btn_controller_circle" type="submit" name="action" value="PlayPause">
                        <!--Play/Pause song-->
                        <i class="bi bi-play-circle-fill"></i>
                    </button>

                    <button class="btn btn-close-white btn_controller_circle" type="submit" name="action" value="Skip">
                        <!--Skip to next song-->
                        <i class="bi bi-skip-forward-fill"></i>
                    </button>
                </div>

                <div class="col-md-4"> <!--Volue slider-->
                    <div class="input-group align-items-center">
                        <span class="input-group-addon">
                            <span class="bi bi-volume-up-fill btn-close-white btn_controller_circle"></span>
                        </span>

                        <input type="range" min="0" max="100" step="1" value="50" id="slider" name="volume" />
                    </div>
                </div>

            </div>
        </div>
        <br>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
